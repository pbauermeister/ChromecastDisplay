<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fullscreen_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:background="#0099cc"
        android:orientation="vertical"
        android:padding="8dp">

        <digital.bauermeister.chromecastdisplay.TextAutoscrollView
            android:id="@+id/chromecast_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:text="Scanning..."
            android:gravity="center_vertical" />

        <digital.bauermeister.chromecastdisplay.TextAutoscrollView
            android:id="@+id/app_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="center_vertical" />

        <digital.bauermeister.chromecastdisplay.TextAutoscrollView
            android:id="@+id/status_text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:text="---"
            android:gravity="center_vertical" />

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/audio_level"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/ic_volume_00"
                android:gravity="center" />

            <ImageView
                android:id="@+id/audio_muted"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/ic_volume_on"
                android:gravity="center" />

            <ImageView
                android:id="@+id/stand_by"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/ic_standby_unknown"
                android:gravity="center" />

            <ImageView
                android:id="@+id/state"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_state_unknown"
                android:layout_weight="1"
                android:gravity="center" />

            <ImageView
                android:id="@+id/event"
                android:layout_width="wrap_content"
                android:src="@drawable/ic_idle"
                android:layout_height="match_parent"
                android:gravity="center" />
        </LinearLayout>
    </LinearLayout>

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>